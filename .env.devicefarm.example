# Appium Device Farm Configuration Example
# Copy this file to .env and update the values

# Device Farm Connection
DEVICE_FARM_URL=http://your-device-farm-url:4723
DEVICE_FARM_PORT=4723

# Authentication (choose one method)
DEVICE_FARM_API_KEY=your-api-key
# Alternative authentication method
#DEVICE_FARM_USERNAME=your-username
#DEVICE_FARM_PASSWORD=your-password

# Test Execution Configuration
APP_NAME=sample_app
APP_ENV=qa
PLATFORM=android
MAX_INSTANCES=10

# Android Configuration
ANDROID_APP_PATH=apps/app.apk
ANDROID_APP_PACKAGE=com.sample_app.qa

# iOS Configuration
IOS_BUNDLE_ID=io.sample_app.qa